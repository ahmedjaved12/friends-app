<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>

<h1>Friends</h1>

<table id="friends", class="table table-striped table-bordered">
  <thead>
    <tr class="thead-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Created At</th>
      <th>See Friend</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name + " " + friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.created_at %></td>
        <td><%= link_to "Show this friend", friend %></td>
        <td><%= link_to "Edit", edit_friend_path(friend) %></td>
        <td><%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-outline-success" %>


